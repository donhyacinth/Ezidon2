<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_travel"
    android:padding="16dp">

    <!-- Top Navigation Spinner -->
    <Spinner
        android:id="@+id/spinnerNav"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:entries="@array/navigation_options"
        android:spinnerMode="dropdown"
        android:layout_gravity="end"
        android:background="@drawable/rounded_spinner"
        android:padding="13dp"/>

    <EditText
        android:id="@+id/searchBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/search_hint"
        android:background="@drawable/search_bar_bg"
        android:padding="12dp"
        android:textColor="#000000"
        android:textColorHint="#666666"
        android:drawableStart="@drawable/ic_search"
        android:drawablePadding="8dp"/>


    <!-- Grid Layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="12dp">

        <GridLayout
            android:id="@+id/gridLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:alignmentMode="alignBounds">


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="225dp"
                android:layout_columnWeight="1"
                android:layout_marginBottom="16dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/card_background"
                android:orientation="vertical"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/imgSite1"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/site_tower_paris_title" />

                <TextView
                    android:id="@+id/tvSite1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/site_tower_paris_title"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/btnViewSite1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:backgroundTint="#FFA500"
                    android:text="@string/view_button"
                    android:textColor="#000000" />
            </LinearLayout>

            <!-- Site 2 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="225dp"
                android:layout_columnWeight="1"
                android:layout_marginBottom="16dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/card_background"
                android:orientation="vertical"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/imgSite2"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/great_wall_china" />

                <TextView
                    android:id="@+id/tvSite2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/site_great_wall_title"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/btnViewSite2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:backgroundTint="#FFA500"
                    android:text="@string/view_button"
                    android:textColor="#000000" />
            </LinearLayout>

            <!-- Site 3 -->
